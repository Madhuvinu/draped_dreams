{
  "name": "draped-dreams-ui",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build --base=/files/ && yarn copy-assets",
    "build:production": "vite build --base=/files/ && yarn deploy:production",
    "build:dev": "vite build --base=/files/ && yarn copy-assets",
    "copy-assets": "JS=$(ls -t dist/assets/index-*.js | head -1) && CSS=$(ls -t dist/assets/index-*.css | head -1) && cp \"$JS\" dist/assets/index-app.js && cp \"$CSS\" dist/assets/index-app.css && mkdir -p ../../sites/dreams.localhost/public/files/assets && cp -r dist/assets/* ../../sites/dreams.localhost/public/files/assets/ && echo 'All assets copied successfully (with index-app.js/css)'",
    "deploy:production": "echo 'ðŸš€ Deploying to production...' && ../deploy_assets.sh"
  },
  "dependencies": {
    "@vueuse/core": "^10.3.0",
    "@vueuse/integrations": "^10.3.0",
    "feather-icons": "^4.28.0",
    "lodash": "^4.17.21",
    "pinia": "^2.0.33",
    "socket.io-client": "^4.7.2",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.9",
    "vue": "^3.4.12",
    "vue-router": "^4.2.2"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.5",
    "vite": "^4.4.9",
    "vite-plugin-pwa": "^0.15.0"
  }
}
